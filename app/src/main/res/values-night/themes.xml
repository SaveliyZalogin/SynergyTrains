<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SynergyTrains" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/dark_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">#AAFFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TitleLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="EditTextHint">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="alpha">.7</item>
    </style>
</resources>